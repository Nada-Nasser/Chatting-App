<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chat_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chat_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".MessagesListenerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.chatapp.MessagesListenerService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <receiver android:name=".BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".MessagesListenerJobIntentService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".chattingroom.ChatRoom"
            android:theme="@style/chatTheme" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>